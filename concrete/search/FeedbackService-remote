    if len(args) != 4:
        print('addSentenceFeedback requires 4 args')
        sys.exit(1)
    pp.pprint(client.addSentenceFeedback(eval(args[0]), args[1], eval(args[2]), eval(args[3]),))

elif cmd == 'about':
    if len(args) != 0:
        print('about requires 0 args')
        sys.exit(1)
    pp.pprint(client.about())

elif cmd == 'alive':
    if len(args) != 0:
        print('alive requires 0 args')
        sys.exit(1)
    pp.pprint(client.alive())

else:
